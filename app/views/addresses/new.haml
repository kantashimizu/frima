.body
  .header
    .header__logo
      = link_to image_tag(src="sns_top.svg" ), root_path
    %nav.progress
      %ul.progress-bar
        %li.step1#active#done
          会員情報
          .progress-status
          .progress-status_bar
        %li.step2#active#done
          電話番号認証
          .progress-status
          .progress-status_bar
        %li.step3#active
          お届け先住所入力
          .progress-status
          .progress-status_bar
        %li.step4
          支払い方法
          .progress-status
          .progress-status_bar
        %li.step5
          完了
          .progress-status
          .progress-status_bar
  = form_for @addresses do |f|
    .signup_3
      .signup-title_3
        発送元・お届け先住所登録
      .signup__box_3
        .signup__box-input_3
          .field_3
            .field-info__postnum_3
              %label{for: "postnum"} 郵便番号
              %span.form-require 必須
              %br
            .field-input_3
              = f.text_field :postnum, class: "input-default", autocomplete: "postnum", placeholder: "例）123-4567"
          .field_3
            .field-info__prefecture_3
              %label{for: "prefecture"} 都道府県
              %span.form-require 必須
              %br
            .field-info__prefecture_select_3.select
              = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt: "--"
          .field_3
            .field-info__city_3
              %label{for: "city"} 市区町村
              %span.form-require 必須
              %br
            .field-input_3
              = f.text_field :city, class: "input-default-half", autocomplete: "city", placeholder: "例）横浜市緑区"
          .field_3
            .field-info__street_num_3
              %label{for: "street_num"} 番地
              %span.form-require 必須
            .field-input_3
              = f.text_field :street_num, class: "input-default", autocomplete: "street_num", placeholder: "例）青山1-1-1"
            .field_3
              .field-info__building_3
                %label{for: "building"} 建物名
                %span.form-require_1 任意
              .field-input_3
                = f.text_field :building, class: "input-default", autocomplete: "building", placeholder: "例）柳ビル103"
          .next__btn_3
            = f.submit '次へ進む', class:"next-btn_3"
  .footer-user_3
    %ul
      %li= link_to "プライバシーポリシー", '#'
      %li= link_to "メルカリ利用規約", '#'
      %li= link_to "特定商取引に関する表記", '#'
    .footer-user__link
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "/"
      %p © Mercari, Inc.
