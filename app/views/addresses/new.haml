-# 住所登録
.body
  .header
    .header__logo
      = link_to image_tag(src="sns_top.svg" ), root_path
    %nav.progress
      %ul.progress-bar
        %li.step1#active
          会員情報
          .progress-status
          .progress-status_bar
        %li.step2
          電話番号認証
          .progress-status
          .progress-status_bar
        %li.step3
          お届け先住所入力
          .progress-status
          .progress-status_bar
        %li.step4
          支払い方法
          .progress-status
          .progress-status_bar
        %li.step5
          完了
          .progress-status
          .progress-status_bar
          -# #done
