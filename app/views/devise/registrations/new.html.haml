.sign_in
  .header
    .header__logo
      <img src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2356214421" alt="mercari">
    %nav.progress-bar.signup-bar
      %ol.header__nav
        %li.active
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status

  
  = form_for(resource, as: resource_name, url: registration_path(resource_name), id: "register-form") do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
      = f.label :nickname
      %em (10 characters maximum)
      %br/
      = f.text_field :nickname, autofocus: true, maxlength: "10"
    .field
      %field
        %label.image-icon
          = fa_icon 'picture-o', class: 'icon'
          %input.hidden{type: 'file'}
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
