    = render '/mypages/partial/sidebar'
    .right_box
      .right_box__head
        = link_to "#" do
          = image_tag "/my_icon.png"
        .right_box__head__user_name
          ユーザー
        .right_box__head__history_box
          .right_box__head__history_box__evaluation
            評価
          .right_box__head__history_box__number
            0
          .right_box__head__history_box__exhibit
            出品数
          .right_box__head__history_box__number
            0
      .right_box__bar_box
        .right_box__bar_box__notice
          お知らせ
        .right_box__bar_box__list
          やることリスト
      .right_box__message_item_link
        .right_box__message_item_link__icon
          = link_to "#" do
            = image_tag "/ロゴ.png"
          .right_box__message_item_link__icon__box
